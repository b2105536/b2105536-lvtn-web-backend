<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        .btn {
            margin: 2px;
            padding: 3px;
        }
    </style>
</head>
<body>
    <a href="/add-user" class="btn btn-primary">Thêm người dùng</a>
    <table style="width:100%; margin-top: 10px;">
        <tr>
            <th>Số điện thoại</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Số định danh cá nhân</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Địa chỉ thường trú</th>
            <th>Ảnh đại diện</th>
            <th>Nhóm ND</th>
            <th>Hành động</th>
        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].soDienThoai %></td>
                <td><%= dataTable[i].hoTen %></td>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].soDD %></td>
                <td><%= dataTable[i].gioiTinh %></td>
                <td><%= dataTable[i].ngaySinh %></td>
                <td><%= dataTable[i].dcThuongTru %></td>
                <td><%= dataTable[i].anhDD %></td>
                <td><%= dataTable[i].nhomId %></td>
                <td>
                    <a href="/edit-user?id=<%= dataTable[i].id %>" class="btn btn-warning">Sửa</a>
                    <a href="/delete-user?id=<%= dataTable[i].id %>" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        <% } %>

